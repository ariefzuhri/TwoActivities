<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="@dimen/padding_main">

    <TextView
        android:id="@+id/tv_header_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/reply_received"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tv_reply_received_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reply_received"
        android:layout_below="@id/tv_header_main"
        android:layout_marginStart="8dp"/>

    <Button
        android:id="@+id/btn_send_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send"
        android:layout_alignParentEnd="true"
        android:onClick="launchSecondActivity"
        android:layout_alignParentBottom="true"/>

    <EditText
        android:id="@+id/edt_message_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/btn_send_main"/>
</RelativeLayout>